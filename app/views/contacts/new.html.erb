<%= simple_form_for(@contact, url: contacts_path()) do | f | %>

  <%= f.input :name, required: true, autofocus: true %>
  <%= f.input :email, required: true %>
  <%= f.input :phone, required: false,
    input_html: { 'data-mask' => '(00) 00000-0000', placeholder: '(00) 00000-0000' } %>
  <%= f.association :institution, prompt: t('prompt.select.f', name: Institution.model_name.human),
    input_html: { class: 'apply-selectize' } %>

    <div class="row">
      <div class="col-6">
        <%= link_to t('helpers.back'), root_path, class: 'btn btn-secondary mr-7' %>
      </div>
      <div class="col-6">
        <%= f.button :submit, class: 'btn-primary ml-auto' %>
      </div>
    </div>

<% end %>
