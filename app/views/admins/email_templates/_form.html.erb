<%= simple_form_for([:admins, @template], html: { autocomplete: 'off' }) do |f| %>

  <div class="form-row">
    <div class="col-sm-8">
      <%= f.input :name, required: true, autofocus: true, disabled: true %>
      <%= f.hidden_field :name, required: true, autofocus: true %>
    </div>
  </div>

  <%= f.input(:content_markdown, input_html: { class: 'markdown-editor' }) %>

  <div class="d-flex">
    <%= link_to t('helpers.back'), admins_admins_path, class: 'btn btn-secondary float-left' %>
    <%= f.button :submit, class: 'btn btn-primary ml-auto' %>
  </div>
<% end %>
