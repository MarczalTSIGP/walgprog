<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>
      <%= full_title(yield(:head_title)) %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>
      #nav ul li a.active span::before {
        color: <%= Event.current_color %>;
      }
    </style>

    <%= render 'application/favicon' %>
  </head>

  <body class="is-preload">

    <!-- Header -->
    <div id="header">
      <div class="top">

        <!-- Logo -->
        <div id="logo">
          <%= link_to admins_root_path do %>
            <%= render 'shared/logo', css_class: 'logo-index' %>
          <% end %>

          <h1 id="title"><%= I18n.t('views.sidebar.walgprog') %> / <%= Time.now.year %> </h1>
          <p><%= I18n.t('views.sidebar.subtitle') %></p>
        </div>

        <!-- Nav -->
        <nav id="nav">
          <ul>
            <%= yield %>
          </ul>
        </nav>

      </div>
    </div>

    <div id="main">
      <%= render partial: 'home/section', collection: @sections %>
    </div>

    <div id="footer">
      <%= I18n.t('views.footer.maintained') %>
      <ul class="copyright">
        <!-- <li>&#38;copy; Untitled. All rights reserved.</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li> -->
        <li><%= image_tag 'home/npec-logo.png', alt: 'Logo do grupo NPEC' %></li>
        <li><%= image_tag 'home/utfpr-logo.png', alt: 'Logo da UTFPR' %></li>
      </ul>

      <ul class="copyright">
        <li><%= image_tag 'home/lite-logo.png', alt: 'Logo do grupo lite' %></li>
        <li>  <%= image_tag 'home/univali-logo.png', alt: 'Logo da UNIVALI' %></li>
      </ul>
    </div>

  </body>
</html>
